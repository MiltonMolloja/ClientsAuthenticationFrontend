# nginx.conf.example - Production configuration for Identity/Authentication Frontend
# Copy this to your nginx server configuration
# SECURITY NOTE: This is an authentication service - security headers are stricter

server {
    listen 443 ssl http2;
    server_name identity.ecommerce.com login.ecommerce.com;
    
    # SSL Configuration - Use strong settings for auth service
    ssl_certificate /etc/ssl/certs/identity.ecommerce.com.crt;
    ssl_certificate_key /etc/ssl/private/identity.ecommerce.com.key;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384;
    ssl_prefer_server_ciphers off;
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 1d;
    ssl_stapling on;
    ssl_stapling_verify on;

    root /var/www/identity/browser;
    index index.html;

    # Security Headers - STRICT for authentication service
    add_header X-Frame-Options "DENY" always;  # DENY instead of SAMEORIGIN for auth
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin" always;  # Stricter for auth
    add_header Permissions-Policy "camera=(), microphone=(), geolocation=(), payment=()" always;
    
    # Content Security Policy - STRICT for authentication
    add_header Content-Security-Policy "
        default-src 'self';
        script-src 'self' https://browser.sentry-cdn.com;
        style-src 'self' 'unsafe-inline' https://fonts.googleapis.com;
        font-src 'self' https://fonts.gstatic.com;
        img-src 'self' data:;
        connect-src 'self' https://api.ecommerce.com https://*.sentry.io;
        frame-src 'none';
        object-src 'none';
        base-uri 'self';
        form-action 'self' https://api.ecommerce.com;
        frame-ancestors 'none';
        upgrade-insecure-requests;
    " always;

    # HSTS - Enable for auth service (uncomment after confirming HTTPS works)
    # add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied any;
    gzip_types text/plain text/css text/xml text/javascript application/javascript application/json application/xml;
    gzip_comp_level 6;

    # Cache static assets
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # Cache HTML with revalidation - shorter for auth pages
    location ~* \.html$ {
        expires -1;
        add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate";
        add_header Pragma "no-cache";
    }

    # Angular SPA routing
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Block access to sensitive files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Health check endpoint
    location /health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }
}

# Redirect HTTP to HTTPS
server {
    listen 80;
    server_name identity.ecommerce.com login.ecommerce.com;
    return 301 https://$server_name$request_uri;
}
